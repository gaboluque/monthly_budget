# Build stage
FROM node:18-alpine as build

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy source code
COPY . .

# Build the application
RUN npm run build

# No need for a separate nginx image
# We'll run the Remix app directly

# Expose port 80
EXPOSE 80

# Start the Remix server
CMD ["npm", "run", "start"] 