{
  "version": 1,
  "framework": "remix",
  "hosting": {
    "amplifyhosting": {
      "route53SiteUrl": null,
      "renderUrl": null
    }
  },
  "tags": {},
  "environment": {
    "variables": {}
  },
  "build": {
    "outDir": "dist",
    "buildCommand": "npm run build",
    "installCommand": "npm ci"
  },
  "cache": {
    "paths": [
      "node_modules/**/*"
    ]
  },
  "customHeaders": [
    {
      "pattern": "**/*.{js,css,png,jpg,jpeg,gif,svg,ico,json,html}",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
} 